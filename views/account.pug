extends layout

block content   
    .container.marketing
        .row
            h2 The statistics here show from the postcode on your account.
            .col-lg-6.col-sm-12
                ul.list-group.mb-3
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            h6.my-0 Crime
                            small.text-muted Total Crime Number
                        buttton#crimeStatUser
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            h6.my-0 Housing
                            small.text-muted Total Houesholds
                        buttton#houseStatUser
                    li.list-group-item.d-flex.justify-content-between.lh-condensed
                        div
                            h6.my-0 Population
                            small.text-muted Total Population
                        buttton#popStatUser
                    //li.list-group-item.d-flex.justify-content-between.bg-light
                        .text-success
                            h6.my-0 Promo code
                            small EXAMPLECODE
                            span.text-success -$5
                    //li.list-group-item.d-flex.justify-content-between
                        span Overall Score
                        strong $20
            .col-lg-6.col-sm-12
                canvas#graphicOftop3
        .row
            .col-lg-12
                canvas#someStats
        .row
            .col-lg-6.col-sm-12
                h2 Your rating information
                .table-responsive
                    table.table.table-striped.table-sm
                        thead
                            tr
                                th Ward
                                th Q1
                                th Q2
                                th Q3
                        tbody.tBodyUserRate     
            .col-lg-6.col-sm-12
                h2 Account Details
                 .userDetailsForm
                    form#userDetailsForm(action="/users/update_user" method="POST")
                        .form-row  
                            .form-group.col-sm-6
                                label(for='validationDefault01') First name
                                input#validationDefault01.form-control(type='text', placeholder='First name', required='',name='fName')
                            .form-group.col-sm-6   
                                label(for='validationDefault02') Last name
                                input#validationDefault02.form-control(type='text', placeholder='Last name', required='',name='lName')
                            hr        
                            .form-group.col-sm-6
                                label(for='inputEmail4') Email
                                input#inputEmail4.form-control(type='email', placeholder='Email', name='email')
                            hr      
                            .form-group.col-sm-6
                                label(for='inputAddress') Address
                                input#inputAddress.form-control(type='text', placeholder='1234 Main St', name='address')
                            .form-group.col-sm-6
                                label(for='inputZip') PostCode
                                input#inputZip.form-control(type='text', name='postCode')
                            .form-group.col-sm-6
                                label(for='inputCity') City
                                input#inputCity.form-control(type='text' name='city')
                            input(type="hidden" id="wardName" name="wardName" value="")
                            .form-group.col-sm-12    
                                button#subUser.btn.btn-primary.float-right(type='submit') Update      

        
    script
        include ../public/javascripts/mainFunc.js  
        include ../public/javascripts/users/user_func.js        
        include ../public/javascripts/users/users.js    
        include ../public/javascripts/chartJs/radar.js

