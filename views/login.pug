            input#inputPassword.form-control(type='password', required='',name="password")
            label(for='inputPassword') Password
        button.btn.btn-lg.btn-primary.btn-block#logzinUser(type='submit') Sign in
        br
        a(href='/users/register')
            button.btn.btn-lg.btn-primary.btn-block(type='button') Register
