extends layout

block content
    .registerForm
        form#userForm(action="/users/user_create" method="POST")
            .form-row
            | User Register Form
            hr    
            .form-group.col-sm-12
                label(for='validationDefault01') First name
                input#validationDefault01.form-control(type='text', placeholder='First name', required='',name='fName')
                label(for='validationDefault02') Last name
                input#validationDefault02.form-control(type='text', placeholder='Last name', required='',name='lName')
            hr        
            .form-group.col-sm-12
                label(for='inputEmail4') Email
                input#inputEmail4.form-control(type='email', placeholder='Email', name='email')
            hr  
            .form-group.col-sm-12
                label(for='inputPassword4') Password
                input#inputPassword4.form-control(type='password', placeholder='Password', name='password')
            hr      
            .form-group.col-sm-12
                label(for='inputAddress') Address
                input#inputAddress.form-control(type='text', placeholder='1234 Main St', name='address')
                .form-group.col-sm-12
                label(for='inputZip') PostCode
                input#inputZip.form-control(type='text', name='postCode')
            .form-group.col-sm-12
                label(for='inputCity') City
                input#inputCity.form-control(type='text' name='city')
            input(type="hidden" id="wardName" name="wardName" value="")
            .form-group.col-sm-12    
                button#subUser.btn.btn-primary.float-right(type='submit') Register
    script
        include ../public/javascripts/users/user.js
      
